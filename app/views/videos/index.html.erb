
<div class="row container-fluid font">
  <div class="row">
    <div class="col-xs-5 col-xs-offset-3">
      <h1 style="margin-top:1.5em; margin-bottom:1.5em;">Videos Availables</h1>
    </div>
    <div class="admin-home-options  col-xs-offset-10">
      <p> Admin Options</p><hr>
      <%= link_to "Inactive Videos", videos_inactives_path, class:"border-bottom: thin solid;" %> <br><hr>
      <%= link_to "Create Video",new_video_path,class:"border-bottom: thin solid black;" %><hr>
    </div>
  </div>
  <div class="panel-group">
    <div class="panel-default" style="background-color:none;">
      <div class="panel-body">
        <div class="paginate m-b-1">
          <%= will_paginate @videos %>
        </div>
        <% @videos.each do |v| %>
          <div class="row">
          <div class="col-xs-3 home-video-img">
          </div>
          <div class="col-xs-5 description">
            <button type="button" data-toggle="collapse" data-target="#demo<%=v.id%>" class="btn btn-info"> <%= v.name %> </button>
            <div id="demo<%=v.id%>" class="collapse">
              <%= v.description %>
             <%= link_to "Video", href:v.url %>

            </div>
          </div>
          <div class="col-xs-2">
            <p>PRICE</p>
            <p> <%= v.price %> </p>
          </div>
          <div class="col-xs-2">
            <!-- Sends on the URL the "v_id" which is the id of the video -->
            <%= link_to "Buy", new_payment_path(v_id:v.id) %>
            <%= link_to "Show", video_path(v) %>
            <%= link_to "Edit",edit_video_path(v) %>
            <%= link_to "Inactivate",video_path(v), :confirm => "Are you sure you want to delete?",method: :delete %>
          </div>
        </div>
        <%end%>

      </div>
    </div>
  </div>
  <%= will_paginate @videos %>
</div>
