<div class="new-component">
  <h2>Create Video</h2>
  <%= form_for @video do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder:"Title", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.number_field :price, placeholder:"$$$", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_field :url, placeholder:"Url path: www.youtube.com", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, placeholder:"Description", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Video" , class:"btn btn-primary"%>
    </div>
  <% end %>
</div>
