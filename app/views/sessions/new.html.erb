<div class="login-component">
  <h2>Login</h2>
  <%= form_tag sessions_path do %>
    <div class="form-group" >
      <%= text_field_tag :email, params[:email], placeholder:"Email", class:"form-control" %>
    </div>
    <div class="form-group" >
      <%= password_field_tag :password, nil, placeholder:"Password",class:"form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Success", class:"btn btn-success" %>
      <%= link_to "Don't have an account?", new_user_path, class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
