<div class="edit-component">
  <div>
    <h2>Edit Account</h2>
  </div>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name:",class:"control-label" %>
      <%= f.text_field :name, class:" form-control", placeholder:"Full Name" %>
    </div>
    <div class="form-group">
      <%= f.label :age, "Age: ",class:"control-label" %>
      <%= f.number_field :age, class:"form-control", placeholder:"Age" %>
    </div>
    <div class="form-group">
      <%= f.label :username, "Username:",class:"control-label" %>
      <%= f.text_field :username, class:"form-control", placeholder:"Username" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email:",class:"control-label" %>
      <%= f.email_field :email , class:"form-control", placeholder:"Email" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password:",class:"control-label" %>
      <%= f.password_field :password , class:"form-control", placeholder:"Password" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmation:",class:"control-label" %>
      <%= f.password_field :password_confirmation , class:"form-control", placeholder:"Password Confirmation" %>
    </div>
    <div class="form-group">
      <%= f.label :profile_photo, "Update Profile Picture:",class:"control-label" %>
      <div id="target-image" style="margin:1em;"></div>
      <%= f.file_field :profile_photo %>
    </div>
    <div class="form-group">
      <%= f.label "Current Profile Picture:" , class:"control-label"%>
      <%= image_tag @user.profile_photo.url(:thumb) %>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit "Update Account", class:"btn btn-primary " %>
    </div>
  <% end %>
</div>
