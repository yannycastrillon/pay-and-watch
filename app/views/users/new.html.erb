<div class="sigin-component">
  <h2>Create Account</h2>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :profile_photo, "Profile Picture", class:"control-label" %>
      <%= f.file_field :profile_photo, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :name, "Name",class:"control-label" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :age, "Age",class:"control-label" %>
      <%= f.number_field :age, class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :username, "Username",class:"control-label" %>
      <%= f.text_field :username, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email",class:"control-label" %>
      <%= f.email_field :email , class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password",class:"control-label" %>
      <%= f.password_field :password , class:"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmation",class:"control-label" %>
      <%= f.password_field :password_confirmation , class:"form-control" %>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit "Create Account",class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
