

<div class="row">
  <div class="col-xs-offset-1 profile-header">
    <h1>Show User Profile Account</h1>
    <%= link_to "Edit Profile", edit_user_path(@user) %>
  </div>
</div>

<!-- Middle section -->
<div class="row">
  <div class="col-xs-offset-4 col-xs-6">
    <p><strong> Complete Name: </strong><%= @user.name %> </p>
    <p><strong> Age: </strong><%= @user.age.to_s %> </p>
    <p><strong> Username: </strong><%= @user.username %> </p>
    <p><strong> Email: </strong><%= @user.email %> </p>
  </div>
  <div class="col-xs-6">
  </div>
</div>

<!-- List videos of each User-->
<div class="row">
  <div class="profile-videos">
    <h3>List of Videos</h3>
    <ul>
        <% @user.videos.each do |v| %>
          <li> <p> <%= v.name %></p></li>
          <li> <%= v.url %>  </li>
          <li> <%= v.price %> </li>
        <%end%>
    </ul>

  </div>
</div>
