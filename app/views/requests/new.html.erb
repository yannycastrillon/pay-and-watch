<div class="row m-b-3">
  <h2>Contact Information</h2>
</div>
<div class="row">
  <div class="col-xs-offset-4 col-xs-4">
    <input type="text" placeholder="Full Name" class="form-control "/>
  </div>
</div>
<div class="row m-y-1">
  <div class="col-xs-offset-4 col-xs-4">
    <input type="text" placeholder="Email" class="form-control "/>
  </div>
</div>
<div class="row">
  <div class="col-xs-offset-4 col-xs-4">
    <textarea name="name" rows="8" cols="80" class="form-control" placeholder="Description"></textarea>
  </div>
</div>
<div class="row m-t-3">
  <!-- This button will send the email with the form information -->
  <%= button_to "Activate Account?" ,class:"col-md-offset-4 col-md-3 btn btn-primary" %>

</div>
